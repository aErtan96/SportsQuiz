<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionsActivity">

    <TextView
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="65dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/option1Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/option1Text"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="53dp"
        android:background="#03A9F4"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/option3Text"
        app:layout_constraintEnd_toStartOf="@+id/option2Text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionText" />

    <TextView
        android:id="@+id/option4Text"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="40dp"
        android:background="#03A9F4"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/option3Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/option3Text" />

    <TextView
        android:id="@+id/option2Text"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginEnd="40dp"
        android:background="#03A9F4"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/option1Text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/option1Text" />

    <TextView
        android:id="@+id/option3Text"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="46dp"
        android:layout_marginBottom="157dp"
        android:background="#03A9F4"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/option4Text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option1Text" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="217dp"
        android:layout_height="74dp"
        android:gravity="center"
        android:text="Kalan SÃ¼re: 21"
        android:textAlignment="center
"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option4Text" />

</androidx.constraintlayout.widget.ConstraintLayout>